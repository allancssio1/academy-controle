{% extends "layout.njk" %}

{% block content %}

  <div class="card table-container">
    
    <table width="100%">
      
      <thead>
        
        <tr>
          <th>Instrutor</th>
          <th>Atuação</th>
          <th>Ação</th>
        </tr>
        
      </thead>
      
      <tbody>
        {% for instructor in instructors %}
          <tr>
            <td>
              <span style="background-image: url({{instructor.avatar_url}})"></span>
              {{instructor.name}}
            </td>
            <td>{{instructor.services}}</td>
            {# {% for service in instructor.services %}
              <td>{{service}}</td>
            {% endfor %} #}
            <td>
              <a href="/instructors/{{instructor.id}}">Ver</a>
            </td>
          </tr>
        {% endfor %}
        
      </tbody>

    </table>
    
  </div>

{% endblock content %}